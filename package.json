{
  "name": "dlmm-lp-cli",
  "version": "1.0.0",
  "description": "Meteora DLMM Liquidity Provider CLI",
  "main": "dist/index.js",
  "bin": {
    "dlmm": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "cli": "npm run build && node dist/cli/index.js",
    "cli:interactive": "npm run build && node dist/cli/index.js interactive",
    "cli:wallet": "npm run build && node dist/cli/index.js wallet",
    "test": "jest",
    "test:wallet": "ts-node tests/test-wallet.ts",
    "test:config": "ts-node tests/test-config.ts",
    "test:phase1a": "ts-node tests/test-phase-1a-position-tracking.ts",
    "test:swap": "ts-node tests/test-swap-to-generate-fees.ts",
    "test:usdc": "ts-node tests/get-devnet-usdc.ts",
    "test:meteora": "ts-node tests/test-meteora-usdc-swap.ts",
    "bot": "ts-node src/telegram/bot.ts",
    "dev:bot": "nodemon --watch src/telegram -e ts --exec ts-node src/telegram/bot.ts",
    "monitor": "ts-node start-monitor.ts",
    "monitor:auto": "ts-node start-monitor.ts --auto",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "solana",
    "dlmm",
    "meteora",
    "defi"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@coral-xyz/anchor": "^0.32.1",
    "@meteora-ag/dlmm": "^1.8.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "@types/eventsource": "^1.1.15",
    "@types/inquirer": "^8.2.5",
    "axios": "^1.13.2",
    "bip39": "^3.1.0",
    "bs58": "^6.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "cron": "^4.3.4",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "eventsource": "^4.1.0",
    "inquirer": "^8.2.6",
    "openai": "^4.75.1",
    "pako": "^2.1.0",
    "telegraf": "^4.16.3",
    "telegraf-session-local": "^2.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bip39": "^2.4.2",
    "@types/chalk": "^0.4.31",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
