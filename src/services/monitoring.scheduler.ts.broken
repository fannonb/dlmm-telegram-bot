     */
    private start12HourAnalysis(): void {
    const job = new CronJob(
        '0 8,20 * * *',  // 08:00 and 20:00 UTC
        async () => {
            const hour = new Date().getUTCHours();
            const market = hour === 8 ? 'US Market Open' : 'Asia Market';

